{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "./dist/",
        "strict": true,
        "types": ["node", "jest"],
        "target": "es2019",
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["**/__tests__/*"]
}
